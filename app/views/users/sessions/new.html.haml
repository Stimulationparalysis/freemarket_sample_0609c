%headers
  = link_to(root_path) do
    = image_tag 'mercari_logo_horizontal.png',size: "234x76" , class: "header__logo-img"

.login
  .login__info-container
    %p アカウントをお持ちでない方はこちら
    .login__btn_container
    .user__btn_new
      = link_to "新規会員登録",new_user_registration_path, class: "new-register"
    %br
    %br
    .user__btn_fb
      = image_tag 'facebook_icon.png',size: "35x35" , class: "facebook-icon"
      = link_to "Facebookで登録",user_facebook_omniauth_authorize_path, class: "new-register"
    .user__btn_google
      = image_tag 'google_icon.png',size: "37x37" , class: "google-icon "
      = link_to "Googleで登録",user_google_oauth2_omniauth_authorize_path, class: "google-register"
    %br
    %br
    = form_for(resource, as: resource_name, url: user_session_path) do |f|
      = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'text_field'
      = f.password_field :password, autocomplete: "off", placeholder: 'パスワード', class: 'text_field'
      = image_tag 'rbot-img.png',size: "325x90" , class: "rbot-img2"
      = f.submit 'ログイン', class: 'redbtn'
  %br
  %br
  %p.blue パスワードをお忘れの方

= render partial:'items/item_footer' 