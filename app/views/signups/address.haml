%header
  = link_to(root_path) do
    = image_tag "logo.svg", width:  "234", height: "76", class: "header__logo-img_signup"
  = image_tag 'signup_header3.png',size: "720x110" , class: "header__bar-img"

.delivery
  .delivery__title
    %h2 発送元・お届け先住所入力
    .delivery__info-container
      %ul
        %li
          %h3 お名前
        %li
          .required__icon 必須
        .clearfix
        = text_field_tag :content, "", placeholder: '山田',class: 'text_field'
        = text_field_tag :content, "", placeholder: '太郎',class: 'text_field'
        %li
          %h3 お名前カナ
        %li
          .required__icon 必須
        .clearfix
        = text_field_tag :content, "", placeholder: 'ヤマダ',class: 'text_field'
        = text_field_tag :content, "", placeholder: 'タロウ',class: 'text_field'
        %li
          %h3 郵便番号
        %li
          .required__icon 必須
        .clearfix
        = text_field_tag :content, "", placeholder: '例) 123-4567',class: 'text_field'
        %li
          %h3 都道府県
        %li
          .required__icon 必須
        .clearfix
          = form_tag new_user_path, method: :get, class: 'select-tag' do
            .input-append
              = collection_select :id, :prefecture_id, Prefecture.all, :id, :name
          
        %li
          %h3 市町村
        %li
          .required__icon 必須
        .clearfix
        = text_field_tag :content, "", placeholder: '例) 港区',class: 'text_field'
        %li
          %h3 番地
        %li
          .required__icon 必須
        .clearfix
        = text_field_tag :content, "", placeholder: '例) 芝公園1-1-1',class: 'text_field'
        %li
          %h3 建物名
        %li
          .required__icon 任意
        .clearfix
        = text_field_tag :content, "", placeholder: '例) 芝ヒルズ999',class: 'text_field'
        %li
          %h3 電話
        %li
          .required__icon 任意
        .clearfix
        = text_field_tag :content, "", placeholder: '例) 09012345678',class: 'text_field'
        .next-btn
          = link_to "次へ進む","/users/1/cards/new", class:'next_btn'
          -#### 仮置き。サーバサイド実装後、修正
        .clearfix

= render partial:'items/item_footer'