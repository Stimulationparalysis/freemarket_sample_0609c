.delivery
  = form_for(current_user.profile, url: signup_address_create_path) do |f|
    .delivery__title
      %h2 発送元・お届け先住所入力
      .signup-errors
        = @errors
      .delivery__info-container
        %ul
          %li
            %h3 お名前
          %li
            .required__icon 必須
          .clearfix
          = f.text_field :first_name,{class: 'text_field', placeholder: "例) 山田"}
          = f.text_field :last_name,{class: 'text_field', placeholder: "例) 太郎"}
          %li
            %h3 お名前カナ
          %li
            .required__icon 必須
          .clearfix
          = f.text_field :first_name_kana,{class: 'text_field', placeholder: "例) ヤマダ"}
          = f.text_field :last_name_kana,{class: 'text_field', placeholder: "例) タロウ"}
          %li
            %h3 郵便番号
          %li
            .required__icon 必須
          .clearfix
          = f.text_field :postalcode,{class: 'text_field', placeholder: "例) 123-4567"}
          %li
            %h3 都道府県
          %li
            .required__icon 必須
          .clearfix
            .input-append
              .select-tag
                = f.collection_select( :prefecture, Prefecture.all, :id, :name)
          %li
            %h3 市町村
          %li
            .required__icon 必須
          .clearfix
          = f.text_field :city,{class: 'text_field', placeholder: '例) 東京都港区'}
          %li
            %h3 番地
          %li
            .required__icon 必須
          .clearfix
          = f.text_field :street_number,{class: 'text_field', placeholder: '例) 芝公園2-1-1'}
          %li
            %h3 建物名
          %li
            .required__icon 任意
          .clearfix
          = f.text_field :building,{class: 'text_field', placeholder: '例) 芝公園ビル223'}
          %li
            %h3 電話
          %li
            .required__icon 任意
          .clearfix
          = f.text_field :phone_number,{class: 'text_field', placeholder: '例) 09012345678'}
          %input{type: 'hidden', name: 'move_from', value: move_from}
          - case local_assigns[:move_from]
            - when 'signup'
              = f.submit '次へ進む', id: 'token', class:'next_btn'
            - when 'purchase'
              %input{type: 'hidden', name: 'item_id', value: item_id}
              = f.submit '変更する', id: 'token', class:'next_btn'
          .clearfix